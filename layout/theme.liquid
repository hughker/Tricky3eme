{% include 'meta' %}

<link rel="stylesheet" media="screen" href="{{ 'mangled.css' | asset_url }}">
<link rel="stylesheet" media="screen" href="{{ 'cloudzoom.css' | asset_url }}">
<!-- Respond.js proxy on external server -->
