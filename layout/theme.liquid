<!DOCTYPE html>
<!--[if IEMobile 7 ]><html class="no-js iem7" itemscope itemtype="http://schema.org/{% case template %}{% when 'product' %}Product{% when 'blog' %}Blog{% else %}LocalBusiness{% endcase %}"><![endif]-->
<!--[if lt IE 7 ]><html class="no-js ie6" lang="en" itemscope itemtype="http://schema.org/{% case template %}{% when 'product' %}Product{% when 'blog' %}Blog{% else %}LocalBusiness{% endcase %}"><![endif]-->
<!--[if IE 7 ]><html class="no-js ie7" lang="en" itemscope itemtype="http://schema.org/{% case template %}{% when 'product' %}Product{% when 'blog' %}Blog{% else %}LocalBusiness{% endcase %}"><![endif]-->
<!--[if IE 8 ]><html class="no-js ie8" lang="en" itemscope itemtype="http://schema.org/{% case template %}{% when 'product' %}Product{% when 'blog' %}Blog{% else %}LocalBusiness{% endcase %}"><![endif]-->
<!--[if (gte IE 9)|(gt IEMobile 7)|!(IEMobile)|!(IE)]><!-->
<html class="no-js" lang="en" itemscope itemtype="http://schema.org/{% case template %}{% when 'product' %}Product{% when 'blog' %}Blog{% else %}LocalBusiness{% endcase %}">
<!--<![endif]-->
<head>
{% include 'meta' %}
<link rel="stylesheet" href="{{ 'mangled.css' | asset_url }}">
<script src="{{ 'modernizr.js' | asset_url }}"></script>
{{ content_for_header }}
{% if template contains 'customers' %}
  {{ "shopify_common.js" | shopify_asset_url | script_tag }}
  {{ "customer_area.js"  | shopify_asset_url | script_tag }}
  {{ 'customer.css' | asset_url | stylesheet_tag }}
{% endif %}
</head>

<body id="{% if template %}{% if template contains 'customers' %}customer{% else %}{{ template | handle | replace: '404', 'four04' }}{% endif %}{% else %}app{% endif %}" class="clearfix">
 <header role="banner" class="clearfix">
  <a href="/"><img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}"></a>
  <nav role="navigation">
   <ul>
   {% for link in linklists.main-menu.links %}
    <li{% if link.active %} class="active"{% endif %}>
      <a href="{{ link.url }}">{{ link.title }}</a>
      {% if linklists[link.handle] != empty %}
       <ul>
        {% for sublink in linklists[link.handle].links %}
         <li><a href="{{ sublink.url }}">{{ sublink.title }}</a></li>
        {% endfor %}
       </ul>
      {% endif %}
    </li>
   {% endfor %}
   </ul>
  </nav>
 </header>
 <div id="{{ page_title | handle }}" role="main" class="content clearfix">
   {{ content_for_layout }}
 </div>
 <footer role="contentinfo" class="clearfix">
   <ul>
   {% for link in linklists.footer.links %}
    <li{% if link.active %} class="active"{% endif %}><a href="{{ link.url }}">{{ link.title }}</a></li>
   {% endfor %}
   </ul>
   <p>&copy; {{ "now" | date: "%Y" }}</p>
 </footer>

  <script src="//ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="{{ 'jquery.js' | asset_url }}">\x3C/script>')</script>
  {% if template == 'cart' %}
    <script type="text/javascript">
      function remove_item(id) {
          document.getElementById('updates_'+id).value = 0;
          document.getElementById('cartform').submit();
      }
    </script>
  {% endif %}
  

  <!--[if (lt IE 9) & (!IEMobile)]>
  <script src="{{ 'DOMAssistant.js' | asset_url }}"></script>
  <script src="{{ 'selectivizr.js' | asset_url }}"></script>
  <![endif]-->

</body>
</html>