<meta charset="utf-8">
<meta http-equiv="cleartype" content="on">
<link rel="dns-prefetch" href="//static.myshopify.com/">
<link rel="sitemap" type="application/xml" title="Sitemap" href="{{ shop.url }}/sitemap.xml"
{% if page_title contains 'contact' %}<meta name="robots" content="noindex">{% endif %}
<meta http-equiv="imagetoolbar" content="false" />
<link rel="alternate" type="application/rss+xml" title="RSS" href="{{ shop.url }}/blogs/news.atom">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<link rel="icon" href="{{ 'favicon.ico' | asset_url }}" type="image/x-icon">
<link rel="shortcut icon" href="{{ 'apple-touch-icon.png' | asset_url }}" type="image/x-icon">
{% case template %}
	{% when 'index' %}
    	<title>{{ shop.name }}: {{ settings.seo_tagline }}</title>
  		<meta name="description" content="{{ settings.seo_description }}">
    	<meta name="keywords" content="{{ settings.seo_keywords }}">
	{% when 'collection' %}
    	<title>{{ collection.title }} | {{ shop.name }}: {{ settings.seo_tagline }}</title>
		<meta name="description" content="{{ collection.description | strip_html | strip_newlines | truncatewords: 23 }} (Read more)">
		<meta name="keywords" content="{% for vendor in collection.all_vendors %}{{ vendor }}{% unless forloop.last %}, {% endunless %}{% endfor %}">
	{% when 'product' %}
    	<title>{{ product.title }} by {{ product.vendor }} | {{ shop.name }}</title>
    	<meta name="description" content="{{ product.description | strip_html | strip_newlines | truncatewords: 23 }} (Read more)">
    	<meta name="keywords" content="{% for tag in product.tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}">
  	{% when 'page' %}
    	<title>{{ page.title }} | {{ shop.name }}: {{ settings.seo_tagline }}</title>
    	<meta name="description" content="{{ page.content | strip_html | strip_newlines | truncatewords: 23 }} (Read more)">
	{% when 'blog' %}
    	<title>{{ blog.title }} | {{ shop.name }}: {{ settings.seo_tagline }}</title>
    	<meta name="keywords" content="{% for tag in blog.tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}">
	{% when 'article' %}
    	<title>{{ article.title }} | {{ shop.name }}: {{ settings.seo_tagline }}</title>
    	<meta name="keywords" content="{% for tag in article.tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}">
	{% else %}
    	<title>{{ page_title }} | {{ shop.name }}: {{ settings.seo_tagline }}</title>
{% endcase %}
<link rel="author" href="{{ 'humans.txt'| asset_url }}">